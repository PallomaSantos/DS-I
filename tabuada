using System;

public class tabuada
{
    public static void Main()
    {  
        bool continuar = true;
        
        while(continuar){
        
        Console.WriteLine("=========Calculadora=========");
        Console.WriteLine("Digite o numero para encontrar a tabuada: ");
        int numero = Convert.ToInt32(Console.ReadLine());
        
        for (int i = 1 ; i < 11; i++){
            int resultado = numero * i;
            Console.WriteLine(i + " x " + numero + " = " +resultado);
            } 
            if
            continuar = Escolha();
        }
        
    }
    public static bool Escolha(){
        
        Console.WriteLine ("Voce deseja ver a tabuada de outro numero? Caso sim, digite (s). Caso contrario, pressione qualquer tecla:");

        string choice = Console.ReadLine().ToLower();
        
        return choice == "s";   
        
    }

}
